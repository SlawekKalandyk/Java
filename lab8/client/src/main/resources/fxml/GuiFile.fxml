<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="clientpack.Controller">
   <children>
      <HBox alignment="CENTER" prefHeight="40.0" prefWidth="600.0">
         <children>
            <Label alignment="CENTER" text="Connect to server: " HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets right="5.0" />
               </HBox.margin>
            </Label>
            <Button fx:id="connectButton" alignment="CENTER" mnemonicParsing="false" onAction="#onConnectButtonClick" text="Connect" />
         </children>
      </HBox>
      <TextArea fx:id="chatArea" editable="false" prefHeight="300.0" prefWidth="600.0" VBox.vgrow="ALWAYS">
         <padding>
            <Insets left="5.0" right="5.0" />
         </padding>
      </TextArea>
      <HBox alignment="CENTER" prefHeight="60.0" prefWidth="600.0">
         <children>
            <TextField fx:id="clientInput" onAction="#onClientInputEnter" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets left="5.0" right="5.0" />
               </HBox.margin>
            </TextField>
            <Button fx:id="enterButton" mnemonicParsing="false" onAction="#onEnterButtonClick" text="Enter">
               <HBox.margin>
                  <Insets right="5.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </children>
</VBox>
