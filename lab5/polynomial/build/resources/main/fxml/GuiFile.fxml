<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mainpack.Controller">
   <children>
      <LineChart fx:id="polynomialChart" layoutX="14.0" layoutY="80.0" legendVisible="false">
        <xAxis>
          <NumberAxis side="BOTTOM" fx:id="xAxis" label="x"/>
        </xAxis>
        <yAxis>
          <NumberAxis fx:id="yAxis" side="LEFT" label="y" />
        </yAxis>
      </LineChart>
      <TableView fx:id="coefficientsTableView" editable="true" layoutX="550.0" layoutY="80.0" prefHeight="400.0" prefWidth="200.0">
        <columns>
          <TableColumn fx:id="indexTableColumn" editable="false" prefWidth="75.0" text="Index" sortable="false" />
          <TableColumn fx:id="coefficientTableColumn" onEditCommit="#onCoefficientEdit" prefWidth="125.0" text="Coefficient" sortable="false" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <HBox alignment="CENTER" layoutX="450.0" layoutY="25.0" prefHeight="50.0" prefWidth="300.0">
         <children>
             <Label prefWidth="100" text="Coefficients: " />
            <TextField fx:id="coefficientsAmountInput" onAction="#onCoeffAmountEntered" prefWidth="150.0" promptText="Currently: 0" />
         </children>
      </HBox>
      <ButtonBar layoutX="550.0" layoutY="500.0" prefHeight="40.0" prefWidth="200.0">
        <buttons>
          <Button fx:id="calculateButton" mnemonicParsing="false" onAction="#makeChartOnButtonClick" text="Calculate" />
        </buttons>
      </ButtonBar>
   </children>
</AnchorPane>
